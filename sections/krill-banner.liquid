<style>
  #shopify-section-{{ section.id }} {
    display: flex;
    align-items: flex-end;
    justify-content: space-around;
    background-color: {{ section.settings.bg_color }};
    padding: 60px 0;
    color: {{ section.settings.text_color }};
  }

  #shopify-section-{{ section.id }}
  .hero-krill__image img {
    max-width: 100%;
    height: auto;
    display: block;
    width: 400px;
  }

  #shopify-section-{{ section.id }}
  .hero-krill__content {
    max-width: 50%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: 16px;
    flex: 1 1 90%;
  }
  #shopify-section-{{ section.id }}
  .hero-krill__content h2 {
    font-size: 60px;
    margin-bottom: 1rem;
    color: {{ section.settings.heading_color }};
    font-family: "Barlow"
    , sans-serif;
    font-weight: 700;
    font-size: 60px;
    line-height: 90%;
    letter-spacing: 0;
    vertical-align: middle;
  }
  #shopify-section-{{ section.id }}
  .hero-krill__content .rte {
    margin-bottom: 1.5rem;
    line-height: 1.5;
    font-family: "Barlow"
    , sans-serif;
    font-weight: 400;
    font-size: 20px;
    line-height: 130%;
    letter-spacing: 0;
    vertical-align: middle;
  }
  #shopify-section-{{ section.id }}
  .hero-krill__button {
    background-color: {{ section.settings.button_bg }};
    color: {{ section.settings.button_text_color }};
    display: inline-block;
    text-decoration: none;
    text-align: center;
    text-transform: uppercase;
    font-family: "Barlow"
    , sans-serif;
    font-weight: 500;
    font-size: 20px;
    line-height: 40px;
    vertical-align: middle;
    width: fit-content;
    height: 50px;
    border-radius: 20px;
    padding: 5px 28px;
  }

  @media screen and (max-width: 767px) {
    #shopify-section-{{ section.id }} {
      padding: 40px 0;
    }
    #shopify-section-{{ section.id }}
    .hero-krill__content h2 {
      font-size: 24px;
    }
    #shopify-section-{{ section.id }}
    .hero-krill__content .rte {

      font-size: 15px;

    }
    #shopify-section-{{ section.id }} {
      flex-direction: column;
      text-align: center;
      align-items: center;

    }
    #shopify-section-{{ section.id }}
    .hero-krill__content {
      max-width: 100%;
      margin-top: 2rem;
      align-items: center;
      padding: 0 24px;
      font-size: 15px;
    }
  }
</style>

<section id="shopify-section-{{ section.id }}" class="hero-krill page-width">
  <div class="hero-krill__image">
    {% if section.settings.image %}
      <img
        src="{{ section.settings.image | image_url: width: 800 }}"
        alt="{{ section.settings.image_alt }}"
        loading="lazy"
      >
    {% endif %}
  </div>

  <div class="hero-krill__content">
    <h2>{{ section.settings.heading }}</h2>
    <div class="rte">{{ section.settings.text }}</div>
    {% if section.settings.button_text_krill != blank %}
      <a href="{{ section.settings.button_link }}" class="hero-krill__button">
        {{ section.settings.button_text_krill }}
      </a>
    {% endif %}
  </div>
</section>
{% schema %}
{
  "name": "Hero Krill Oil",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Krill Oil Image"
    },
    {
      "type": "text",
      "id": "image_alt",
      "label": "Image alt text",
      "default": "Krill Oil Jars"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading (H2)",
      "default": "Sustainably Sourced Krill Oil"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Description",
      "default": "Our formula is three times more absorbable than standard fish oil, ensuring your body gets the nutrients it needs for optimal cardiovascular, joint, and brain health."
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#ffffff"
    },
    {
      "type": "text",
      "id": "button_text_krill",
      "label": "Button text",
      "default": "Learn more about us"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    },
    {
      "type": "color",
      "id": "button_bg",
      "label": "Button background",
      "default": "#ff0099"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Button text color",
      "default": "#ffffff"
    }
  ],
  "presets": [
    {
      "name": "Hero Krill Oil",
      "category": "Hero"
    }
  ]
}
{% endschema %}
