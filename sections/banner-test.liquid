{{ 'banner-test.css' | asset_url | stylesheet_tag }}

<style>
    #shopify-section-{{ section.id }}.boost-health {
      background-color: {{ section.settings.boost_health_bg_color }};
      padding: {{ section.settings.boost_health_content_padding }}px;
    }
    #shopify-section-{{ section.id }} .boost-health__content h2 {
      max-width: {{ section.settings.heading_max_width }}px;
      color: {{ section.settings.boost_health_heading_color }};
    }
    #shopify-section-{{ section.id }} .boost-health__content p {
      color: {{ section.settings.boost_health_text_color }};
    }
    @media screen and (min-width: 769px) {
      #shopify-section-{{ section.id }} .boost-health__content {
      text-align: {{ section.settings.desktop_text_align }};
      align-items: {{ section.settings.desktop_align_items }};
    }
  }
</style>
<section
  id="shopify-section-{{ section.id }}"
  class="boost-health page-width {% if section.settings.image_position == 'left' %}boost-health--reverse{% endif %}"
>
  <div class="boost-health__content">
    <h2>{{ section.settings.heading }}</h2>
    <p>{{ section.settings.subheading }}</p>
    <a href="{{ section.settings.button_link }}" class="boost-health__button">
      {{ section.settings.button_text }}
    </a>
  </div>

  <div class="boost-health__image">
    {% if section.settings.image %}
      <figure class="boost-health__image-wrapper">
        <img
          src="{{ section.settings.image | image_url: width: 800 }}"
          alt="Supplement image"
          loading="lazy"
          class="boost-health__img"
          width=""
          height=""
        >
      </figure>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Health Banner",
  "settings": [
    {
      "type": "select",
      "id": "desktop_text_align",
      "label": "Desktop Text Align",
      "default": "left",
      "options": [
        { "label": "Left", "value": "left" },
        { "label": "Center", "value": "center" },
        { "label": "Right", "value": "right" }
      ]
    },
    {
      "type": "select",
      "id": "desktop_align_items",
      "label": "Desktop Align Items",
      "default": "flex-start",
      "options": [
        { "label": "Flex Start", "value": "flex-start" },
        { "label": "Center", "value": "center" },
        { "label": "Flex End", "value": "flex-end" }
      ]
    },
    {
      "type": "range",
      "id": "boost_health_content_padding",
      "label": "Padding of Boost Health (px)",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 0
    },
    {
      "type": "color",
      "id": "boost_health_bg_color",
      "label": "Section background color",
      "default": "#EBEBEB"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Boost Your Health. Save While You Thrive"
    },
    {
      "type": "color",
      "id": "boost_health_heading_color",
      "label": "Title color (H2)",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "heading_max_width",
      "label": "Heading Max Width (px)",
      "default": 450,
      "min": 200,
      "max": 1000,
      "step": 10,
      "unit": "px"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Health is a journey, not a one-time event. Get consistent support with our Subscribe and Save option, delivering up to 15% off every order to keep you on track and feeling your best."
    },
    {
      "type": "color",
      "id": "boost_health_text_color",
      "label": "Text color (P)",
      "default": "#50575e"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Get a Subscription"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Side Image"
    },
    {
      "type": "select",
      "id": "image_position",
      "label": "Image Position on Desktop",
      "default": "right",
      "options": [
        {
          "label": "Right",
          "value": "right"
        },
        {
          "label": "Left",
          "value": "left"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Health Section"
    }
  ]
}
{% endschema %}
