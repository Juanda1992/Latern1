{{ 'banner-test.css' | asset_url | stylesheet_tag }}

<section class="boost-health page-width">
  <div class="boost-health__content">
    <h2>{{ section.settings.heading }}</h2>
    <p>{{ section.settings.subheading }}</p>
    <a href="{{ section.settings.button_link }}" class="boost-health__button">
      {{ section.settings.button_text }}
    </a>
  </div>
  <div class="boost-health__image">
    {% if section.settings.image %}
      <figure class="boost-health__image-wrapper">
        <img
          src="{{ section.settings.image | image_url: width: 800 }}"
          alt="Supplement image"
          loading="lazy"
          class="boost-health__img"
          width=""
          height=""
        >
      </figure>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Boost Your Health",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Boost Your Health. Save While You Thrive"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Health is a journey, not a one-time event. Get consistent support with our Subscribe and Save option, delivering up to 15% off every order to keep you on track and feeling your best."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Get a Subscription"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Right Side Image"
    }
  ],
  "presets": [
    {
      "name": "Boost Your Health Section"
    }
  ]
}
{% endschema %}
